<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/alegreya_sc_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Jimmy"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textCartographie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/alegreya_sc"
            android:text="Cartographie de Jimmy"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_cartographie"
            android:layout_width="346dp"
            android:layout_height="207dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonHaut"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_up_arrow"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="160dp"
            android:visibility="visible"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/buttonGauche"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_left_arrow"
            android:minHeight="48dp"
            android:onClick="onClick"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonDroite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_weight="1"
            android:background="@mipmap/ic_right_arrow"
            android:minHeight="48dp"
            android:onClick="onClick"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonBas"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:background="@mipmap/ic_down_arrow"
            android:visibility="visible"
            android:onClick="onClick" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#BFF0C4"></FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:itemTextAppearance="@style/ItemFont"
        android:layout_gravity="start"
        app:headerLayout="@layout/toolbar_header"
        app:menu="@menu/menu"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextAppearance="@style/ItemFont"
                android:background="#63040303"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>