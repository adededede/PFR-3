<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="FragementPeripheriques"
    tools:context=".FragementPeripheriques"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titre_listeview"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/alegreya_sc_italic"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Voici les appareils bluetooth dans les alentours ou déjà appareillés :"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_p"
        android:paddingTop="120dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/alegreya_sc_black"
        android:textSize="15sp"
        android:layout_weight="1"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="20dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"/>

</FrameLayout>